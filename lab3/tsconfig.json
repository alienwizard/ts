{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": false,
        "lib": [
            "es2015", "es2016", "es2017", "dom"
        ],
        "importHelpers": true,
        "typeRoots": [
            "node_modules/@types/",
            "typings"
        ],
        "moduleResolution": "node"
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "useTranspileModule": true,
        "doTypeCheck": true,
        "forkChecker": true,
        "useCache": true
},
    "compileOnSave": true,
        "include": [
            "./**/*"
        ],
        "exclude": [
            "./node_modules",
            "dist"
        ]
}